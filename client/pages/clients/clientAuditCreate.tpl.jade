+contentFor "title"
   h1 Run Audit
+contentFor "breadcrubms"
   li
      a(href="{{pathFor 'clients'}}") Clients
   li.active
      a(href="{{pathFor 'clientAudit'}}") Run Audit
+clientTabs
.col-sm-12
   input#clientID(type="hidden" value=_id)
   #auditWizard.wizard
      ul.steps
         li.active(data-target='#step01')
            span.badge.badge-info 1
            span.hidden-xs Report Info
            span.chevron
         li(data-target='#step02')
            span.badge 2
            span.hidden-xs Personal Info
            span.chevron
         li(data-target='#step03')
            span.badge 3
            span.hidden-xs Grade for this Report
            span.chevron
         li(data-target='#step04')
            span.badge 4
            span.hidden-xs Description & Conclusion
            span.chevron
      .actions.col-sm-12.col-md-3
         .pull-right
            button.btn.btn-default.btn-mini.btn-prev(type='button')
               i.fa.fa-chevron-left
               |  Prev
            button.btn.btn-primary.btn-mini.btn-next(type='button')
               | Next
               i.fa.fa-chevron-right
   .step-content
      #step01.step-pane.active
         +auditStep1
      #step02.step-pane
         +auditStep2
      #step03.step-pane

      #step04.step-pane

   #auditWizardBottom.wizard.wizard-bottom
      .actions.col-sm-12.col-md-3
         .pull-right
            button.btn.btn-default.btn-mini.btn-prev2(type='button')
               i.fa.fa-chevron-left
               | Prev
            button.btn.btn-primary.btn-mini.btn-next2(type='button')
               | Next
               i.fa.fa-chevron-right