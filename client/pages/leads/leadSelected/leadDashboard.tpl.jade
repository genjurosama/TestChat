+contentFor "title"
   with leadData
      h1 {{profile.firstname}} {{profile.lastname}} - Lead Dashboard
+contentFor "breadcrubms"
    li
        a(href="{{pathFor 'leads'}}") Leads
    li.active
        a(href="{{pathFor 'leadDashboard'}}") Dashboard
+leadTabs
with leadData
    .panel.panel-primary
        .panel-heading
            h3.panel-title Info
                .actions.pull-right
                    i.fa.fa-chevron-up.leadData
        .panel-body
            .row
                button.btn.btn-success.btn-edit-lead(data-toggle='modal', data-target='#myModal') Edit Info
            .row
                +leadInfo

    .panel.panel-primary
        .panel-heading
            h3.panel-title Notes
                .actions.pull-right
                    i.fa.fa-chevron-up
        .panel-body
            .row
                button.add-note.btn.btn-success.pull-left(data-toggle='modal', data-target='#myModal') Add Note
            .row
                +tabular table=TabularTables.leadNotes selector=leadData class="table table-striped table-bordered table-condensed table-responsive"
