+contentFor "title"
   with leadData
      h1 Lead Dashboard - {{profile.firstname}} {{profile.lastname}}
+contentFor "breadcrubms"
    li
        a(href="{{pathFor 'leads'}}") Leads
    li.active
        a(href="{{pathFor 'leadDashboard'}}") Dashboard
+leadTabs
with leadData
    .panel.panel-primary
        .panel-heading
            h3.panel-title Info
                .actions.pull-right
                    i.fa.fa-chevron-up.leadData
        .panel-body(style="padding:0;padding-top:15px;padding-bottom:15px")
            +leadInfo
    .col-sm-12(style="padding:0")
        .panel.panel-primary
            .panel-heading
                h3.panel-title Notes
                    .actions.pull-right
                        i.fa.fa-chevron-up
            .panel-body.small
                .row
                    button.add-note.btn.btn-success.pull-left(data-toggle='modal', data-target='#myModal') Add Note
                .row
                    +tabular table=TabularTables.leadNotes class="table table-striped table-bordered table-condensed table-responsive"
