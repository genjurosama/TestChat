.panel.panel-default
   .panel-body
      table.table.table-bordered
         tbody
            tr
               td(colspan='2', style='font-weight:bold;') CREDIT SCORES
            each creditBureaus
               td(style='text-align:center;')
                  span(id='cs_{{key}}_container')
            tr
               td(colspan='2', style='font-weight:bold;') TOTAL NUMBER OF INQUIRIES
            each creditBureaus
               td(style='text-align:center;')
                  span(id='inq_{{key}}_container')
         each getAccountsData
            each items
               tr
                  td(colspan='50', style='text-align:center; background-color:#424F63; color:#FFF; font-weight:bold;') {{accountType}} Accounts
               tr
                  td(style='font-weight:bold;') Account Name
                  td(style='font-weight:bold;') Account Number
               each creditBureaus
                  td(style='text-align:center;')
                     img(style='width:85px;', src='{{image}}')
            each data
               tr
                  td {{name}}
                  td {{number}}
               each statuses
                  td(style='text-align:center;')
                     span(class='text-{{color}}') {{title}}
            each ratios
               tr
                  td(colspan='2', style='background-color:#424F63; color:#FFF; font-weight:bold;') UTILIZATION RATIO
               each ratioData
                  td {{this}}%
               tr
                  td(colspan='2', style='font-weight:bold;') Assign Credit Grades
               each creditBureaus
                  td(style='text-align:center;')
                     select.form-control(id="grade_{{key}}" name='grade_{{key}}')
                        option(value='') Select
                        option(value='A') A
                        option(value='B') B
                        option(value='C') C
                        option(value='D') D
                        option(value='F') F

